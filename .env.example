# Flask Sing App - Environment Variables Template
# Copy this file to .env and fill in your values

# Flask configuration
FLASK_APP=run.py
FLASK_RUN_PORT=49251
FLASK_CONFIG=development

# Security
SECRET_KEY=change-me-in-production

# Database
DATABASE_URL=sqlite:///dev.db

# Feature toggles
ENABLE_EXAMPLES=true
ENABLE_DARK_THEME=false
ENABLE_CDN_FALLBACK=false

# External services
GOOGLE_MAPS_API_KEY=

# ── Authentication ──────────────────────────────────────────────────────────
# false = demo mode: all pages accessible without login (default for demo projects)
# true  = enforce login: unauthorized users redirected to /auth/login
REQUIRE_LOGIN=false

# false = /auth/register is not accessible (users must be created via flask seed-db)
# true  = public registration is open
ENABLE_REGISTRATION=false

# ── Security Level ──────────────────────────────────────────────────────────
# demo        = CSRF protection on forms only (default)
# basic       = demo + rate limiting on login attempts (5/minute)
# production  = basic + secure HTTP headers (HSTS, X-Frame-Options, Content-Security-Policy)
SECURITY_LEVEL=demo

# ── Cache Configuration ───────────────────────────────────────────────────────
# SimpleCache = in-process cache, no dependency (default for development)
# RedisCache  = requires Redis, set CACHE_REDIS_URL
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300
# CACHE_REDIS_URL=redis://localhost:6379/0

# ── Database ─────────────────────────────────────────────────────────────────
# SQLite (default, zero-config, ideal for demo):
# DATABASE_URL=sqlite:///dev.db
# PostgreSQL example (set when deploying to production):
# DATABASE_URL=postgresql://user:password@localhost:5432/singapp
# MySQL example:
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/singapp
